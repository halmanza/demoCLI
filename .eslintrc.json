{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-unused-expressions":"error",
        "quotes": ["error","double"],
        "no-use-before-define": "warn" ,
        "brace-style": "off",
        "semi":"off",
        "semi-spacing":["error",{"before": false, "after": false}],
        "no-trailing-spaces":"off",
        "space-before-function-paren": ["error", 
        {
            "anonymous": "always",
            "asyncArrow": "always",
            "named": "always"
        }],
        "no-multi-spaces":["error",{"ignoreEOLComments": false}],
        "padded-blocks":"off",
        "no-void":"off",
        "function-paren-newline": ["error", "never"],
        "arrow-body-style": ["error", "as-needed"],
        "comma-dangle": ["error", {
        "arrays": "never",
        "objects": "never",
        "imports": "never",
        "exports": "never",
        "functions": "never"
    }]
    }
}
